<?xml version="1.0"?>
<block>
  <name>RFNoC: Radio</name>
  <key>uhd_rfnoc_streamer_radio</key>
  <throttle>1</throttle>
  <import>import ettus</import>
  <make>ettus.rfnoc_radio(
    self.device3,
    uhd.stream_args( \# Tx Stream Args
        cpu_format="$cpu_format",
        otw_format="$otw_format",
	#if str($direction) == "tx"
	args=${stream_args},
	#else
        args="", \# empty
	#end if
    ),
    uhd.stream_args( \# Rx Stream Args
        cpu_format="$cpu_format",
        otw_format="$otw_format",
	#if str($direction) == "rx"
	args=${stream_args},
	#else
        args="", \# empty
	#end if
    ),
    $radio_index, $device_index
)
self.$(id).set_${direction}_freq($freq)
self.$(id).set_${direction}_rate($rate)
self.$(id).set_${direction}_gain($gain)
self.$(id).set_${direction}_antenna($ant)
self.$(id).set_${direction}_dc_offset($dcenable)
</make>
<callback>self.$(id).set_${direction}_freq($freq)</callback>
<callback>self.$(id).set_${direction}_rate($rate)</callback>
<callback>self.$(id).set_${direction}_gain($gain)</callback>
<callback>self.$(id).set_${direction}_antenna($ant)</callback>

  <param>
    <name>Radio Select</name>
    <key>radio_index</key>
    <type>enum</type>
    <option>
      <name>A</name>
      <key>0</key>
    </option>
    <option>
      <name>B</name>
      <key>1</key>
    </option>
  </param>

  <param>
    <name>Mode</name>
    <key>direction</key>
    <type>enum</type>
    <option>
      <name>Tx</name>
      <key>tx</key>
      <opt>hide_source:all</opt>
      <opt>hide_sink:</opt>
    </option>
    <option>
      <name>Rx</name>
      <key>rx</key>
      <opt>hide_source:</opt>
      <opt>hide_sink:all</opt>
    </option>
  </param>

  <param>
    <name>Host Format</name>
    <key>cpu_format</key>
    <type>enum</type>
    <option>
      <name>Complex float32</name>
      <key>fc32</key>
      <opt>type:fc32</opt>
    </option>
    <option>
      <name>Complex int16</name>
      <key>sc16</key>
      <opt>type:sc16</opt>
    </option>
    <option>
      <name>VITA word32</name>
      <key>item32</key>
      <opt>type:s32</opt>
    </option>
  </param>
  <param>
    <name>Device Format</name>
    <key>otw_format</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>Complex int16</name>
      <key>sc16</key>
      <opt>type:sc16</opt>
    </option>
  </param>
  <param>
    <name>Stream Args</name>
    <key>stream_args</key>
    <type>string</type>
  </param>

  <param>
    <name>Center Frequency</name>
    <key>freq</key>
    <value>1.982e9</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Sampling Rate</name>
    <key>rate</key>
    <value>1e6</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Gain</name>
    <key>gain</key>
    <value>20</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Antenna</name>
    <key>ant</key>
    <type>enum</type>
    <option>
      <name>TX/RX</name>
      <key>"TX/RX"</key>
    </option>
    <option>
      <name>RX2</name>
      <key>"RX2"</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>DC Offset Cancellation</name>
    <key>dcenable</key>
    <type>enum</type>
    <option>
      <name>enabled</name>
      <key>True</key>
    </option>
    <option>
      <name>disabled</name>
      <key>False</key>
    </option>
    <tab>RF Options</tab>
  </param>

  <param>
    <name>Device Select</name>
    <key>device_index</key>
    <value>-1</value>
    <type>int</type>
    <hide>#if int($device_index()) &lt; 0 then 'part' else 'none'#</hide>
    <tab>RFNoC Config</tab>
  </param>

  <param>
    <name>Force Vector Length</name>
    <key>grvlen</key>
    <value>1</value>
    <type>int</type>
    <tab>RFNoC Config</tab>
  </param>

  <sink>
    <name>in</name>
    <type>$cpu_format.type</type>
    <vlen>$grvlen</vlen>
    <domain>rfnoc</domain>
    <optional>1</optional>
    <hide>$direction.hide_sink</hide>
  </sink>

  <source>
    <name>out</name>
    <type>$cpu_format.type</type>
    <vlen>$grvlen</vlen>
    <domain>rfnoc</domain>
    <optional>1</optional>
    <hide>$direction.hide_source</hide>
  </source>
</block>
