<?xml version="1.0"?>
<block>
  <name>RFNoC: Radio</name>
  <key>uhd_rfnoc_streamer_radio</key>
  <throttle>1</throttle>
  <import>import ettus</import>
  <make>ettus.rfnoc_radio(
    self.device3,
    uhd.stream_args( \# Tx Stream Args
        cpu_format="$cpu_format",
        otw_format="$otw_format",
	#if str($direction) == "tx"
	args=${stream_args},
	#else
        args="", \# empty
	#end if
    ),
    uhd.stream_args( \# Rx Stream Args
        cpu_format="$cpu_format",
        otw_format="$otw_format",
	#if str($direction) == "rx"
	args=${stream_args},
	#else
        args="", \# empty
	#end if
    ),
    $radio_index, $device_index
)
self.$(id).set_rate($rate)
for idx, i in enumerate($channel_map):
    self.$(id).set_${direction}_freq($freq, i)
    self.$(id).set_${direction}_gain($gain, i)
    self.$(id).set_${direction}_dc_offset($dcenable, i)
    self.$(id).set_${direction}_port_chan_map(idx, i)
#if (str($direction()) == "rx")

self.$(id).set_rx_bandwidth($rx_bandwidth0, 0)
#else if ($num_channels() > 1):
self.$(id).set_rx_bandwidth($rx_bandwidth1, 1)
#end if

self.$(id).set_${direction}_antenna($ant0, 0)
#if ($num_channels() > 1)
self.$(id).set_${direction}_antenna($ant1, 1)
#end if
#if (str($direction()) == "rx" and not $hide_lo_controls())

self.$(id).set_rx_lo_source(${lo_source0},  "all", 0)
self.$(id).set_rx_lo_export_enabled(${lo_export0}, "all", 0)
#if ($num_channels() > 1)
self.$(id).set_rx_lo_source(${lo_source1},  "all", 1)
self.$(id).set_rx_lo_export_enabled(${lo_export1}, "all", 1)
#end if
#end if

self.$(id).set_clock_source(${source})
</make>
<callback>self.$(id).set_rate($rate)</callback>
<callback>self.$(id).set_bandwidth($rx_bandwidth)</callback>
<callback>for i in $channel_map:
    self.$(id).set_${direction}_freq($freq, i)</callback>
<callback>for i in $channel_map:
    self.$(id).set_${direction}_gain($gain, i)</callback>
<callback>self.$(id).set_${direction}_antenna($ant0)</callback>
<callback>self.$(id).set_${direction}_antenna($ant1)</callback>
<callback>
#if str($direction()) == "rx" and not $hide_lo_controls() and $num_channels > 0
self.$(id).set_rx_lo_export_enabled($lo_export0, "all", 0)
#end if
</callback>
<callback>
#if str($direction()) == "rx" and not $hide_lo_controls() and $num_channels > 1
self.$(id).set_rx_lo_export_enabled($lo_export1, "all", 1)
#end if
</callback>
<callback>
#if str($direction()) == "rx" and not $hide_lo_controls and $num_channels > 0
self.$(id).set_rx_lo_source($lo_source0, "all", 0)
#end if
</callback>
<callback>
#if str($direction()) == "rx" and not $hide_lo_controls and $num_channels > 1
self.$(id).set_rx_lo_source($lo_source1, "all", 1)
#end if
</callback>

<callback>self.$(id).set_clock_source(${source})</callback>

  <param>
    <name>Radio Select</name>
    <key>radio_index</key>
    <type>enum</type>
    <option>
      <name>A</name>
      <key>0</key>
    </option>
    <option>
      <name>B</name>
      <key>1</key>
    </option>
  </param>

  <param>
    <name>Num Channels</name>
    <key>num_channels</key>
    <value>1</value>
    <type>int</type>
    <option>
      <name>2 Channels</name>
      <key>2</key>
    </option>
    <option>
      <name>1 Channel</name>
      <key>1</key>
    </option>
  </param>

  <param>
    <name>Channel Map</name>
    <key>channel_map</key>
    <value>[0]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>Mode</name>
    <key>direction</key>
    <type>enum</type>
    <option>
      <name>Tx</name>
      <key>tx</key>
      <opt>hide_source:all</opt>
      <opt>hide_sink:</opt>
    </option>
    <option>
      <name>Rx</name>
      <key>rx</key>
      <opt>hide_source:</opt>
      <opt>hide_sink:all</opt>
    </option>
  </param>

  <param>
    <name>Host Format</name>
    <key>cpu_format</key>
    <type>enum</type>
    <option>
      <name>Complex float32</name>
      <key>fc32</key>
      <opt>type:fc32</opt>
    </option>
    <option>
      <name>Complex int16</name>
      <key>sc16</key>
      <opt>type:sc16</opt>
    </option>
    <option>
      <name>Real int16</name>
      <key>s16</key>
      <opt>type:s16</opt>
    </option>
    <option>
      <name>VITA word32</name>
      <key>item32</key>
      <opt>type:s32</opt>
    </option>
  </param>
  <param>
    <name>Device Format</name>
    <key>otw_format</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>Complex int16</name>
      <key>sc16</key>
      <opt>type:sc16</opt>
    </option>
    <option>
      <name>Real int16</name>
      <key>s16</key>
      <opt>type:s16</opt>
    </option>
  </param>
  <param>
    <name>Stream Args</name>
    <key>stream_args</key>
    <type>string</type>
  </param>

  <param>
    <name>MB Clock Source</name>
    <key>source</key>
    <value>"internal"</value>
    <type>string</type>
    <option>
      <name>Internal</name>
      <key>"internal"</key>
    </option>
    <option>
      <name>External</name>
      <key>"external"</key>
    </option>
    <option>
      <name>GPSDO</name>
      <key>"gpsdo"</key>
    </option>
  </param>

  <param>
    <name>Center Frequency</name>
    <key>freq</key>
    <value>1.982e9</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Sampling Rate</name>
    <key>rate</key>
    <value>samp_rate</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Gain</name>
    <key>gain</key>
    <value>20</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch0: Antenna</name>
    <key>ant0</key>
    <type>enum</type>
    <hide>
      #if not $num_channels() >= 1
        all
      #end if
    </hide>
    <option>
      <name>TX/RX</name>
      <key>"TX/RX"</key>
    </option>
    <option>
      <name>RX1</name>
      <key>"RX1"</key>
    </option>
    <option>
      <name>RX2</name>
      <key>"RX2"</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch0: LO Source</name>
    <key>lo_source0</key>
    <value>"internal"</value>
    <type>string</type>
    <hide>
    #if not $num_channels() > 0
    all
    #elif $hide_lo_controls()
    all
    #else
    $direction.hide_source
    #end if
    </hide>
    <option>
      <name>Internal</name>
      <key>"internal"</key>
    </option>
    <option>
      <name>Companion</name>
      <key>"companion"</key>
    </option>
    <option>
      <name>External</name>
      <key>"external"</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch0: LO Export</name>
    <key>lo_export0</key>
    <value>False</value>
    <type>bool</type>
    <hide>
    #if not $num_channels() > 0
    all
    #elif $hide_lo_controls()
    all
    #else
    $direction.hide_source
    #end if
    </hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch0: Analog Bandwidth (Hz)</name>
    <key>rx_bandwidth0</key>
    <value>56e6</value>
    <type>real</type>
    <tab>RF Options</tab>
  </param>

  <param>
    <name>Ch1: Antenna</name>
    <key>ant1</key>
    <type>enum</type>
    <hide>
      #if not $num_channels() >= 2
      all
      #end if
    </hide>
    <option>
      <name>TX/RX</name>
      <key>"TX/RX"</key>
    </option>
    <option>
      <name>RX1</name>
      <key>"RX1"</key>
    </option>
    <option>
      <name>RX2</name>
      <key>"RX2"</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch1: LO Source</name>
    <key>lo_source1</key>
    <value>"internal"</value>
    <type>string</type>
    <hide>
    #if not $num_channels() > 1
    all
    #elif $hide_lo_controls()
    all
    #else
    $direction.hide_source
    #end if
    </hide>
    <option>
      <name>Internal</name>
      <key>"internal"</key>
    </option>
    <option>
      <name>Companion</name>
      <key>"companion"</key>
    </option>
    <option>
      <name>External</name>
      <key>"external"</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch1: LO Export</name>
    <key>lo_export1</key>
    <value>False</value>
    <type>bool</type>
    <hide>
    #if not $num_channels() > 1
    all
    #elif $hide_lo_controls()
    all
    #else
    $direction.hide_source
    #end if
    </hide>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
    <tab>RF Options</tab>
  </param>
  <param>
    <name>Ch1: Analog Bandwidth (Hz)</name>
    <key>rx_bandwidth1</key>
    <value>56e6</value>
    <type>real</type>
    <hide>
      #if $num_channels() > 1
        $direction.hide_source
      #else
        all
      #end if
    </hide>
    <tab>RF Options</tab>
  </param>

  <param>
    <name>DC Offset Cancellation</name>
    <key>dcenable</key>
    <type>enum</type>
    <option>
      <name>enabled</name>
      <key>True</key>
    </option>
    <option>
      <name>disabled</name>
      <key>False</key>
    </option>
    <tab>RF Options</tab>
  </param>

  <param>
    <name>Device Select</name>
    <key>device_index</key>
    <value>-1</value>
    <type>int</type>
    <hide>#if int($device_index()) &lt; 0 then 'part' else 'none'#</hide>
    <tab>RFNoC Config</tab>
  </param>

  <param>
    <name>Force Vector Length</name>
    <key>grvlen</key>
    <value>1</value>
    <type>int</type>
    <tab>RFNoC Config</tab>
  </param>

  <param>
     <name>Show LO Controls</name>
     <key>hide_lo_controls</key>
     <value>True</value>
     <type>bool</type>
     <hide>part</hide>
     <option>
        <name>Yes</name>
        <key>False</key>
     </option>
     <option>
        <name>No</name>
        <key>True</key>
     </option>
     <tab>Advanced</tab>
  </param>

  <check>$num_channels == len($channel_map)</check>

  <sink>
    <name>in</name>
    <type>$cpu_format.type</type>
    <vlen>$grvlen</vlen>
    <domain>rfnoc</domain>
    <nports>$num_channels</nports>
    <optional>1</optional>
    <hide>$direction.hide_sink</hide>
  </sink>

  <source>
    <name>out</name>
    <type>$cpu_format.type</type>
    <vlen>$grvlen</vlen>
    <domain>rfnoc</domain>
    <nports>$num_channels</nports>
    <optional>1</optional>
    <hide>$direction.hide_source</hide>
  </source>
</block>
